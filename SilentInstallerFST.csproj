    <PackageProjectUrl>https://github.com/Andrei-Eduard-Stan/SilentInstallerFST</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Andrei-Eduard-Stan/SilentInstallerFST</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>silentinstall; wfp; c#; appinstaller</PackageTags>
  </PropertyGroup>

